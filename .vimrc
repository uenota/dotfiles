set fenc=utf-8
set nobackup
set noswapfile
set hidden
set showcmd

set number
set cursorline
set virtualedit=onemore
set smartindent
set showmatch
set laststatus=2

nnoremap j gj
nnoremap k gk

syntax enable

set expandtab

set ignorecase
set smartcase
set incsearch
set wrapscan
set hlsearch

set tabstop=4
set shiftwidth=4